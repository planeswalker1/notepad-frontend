extends extends/template

block main
  header
    nav.nav
      p.nav__title NotePad
      
      ul.nav__list
        li.list__item: a(href='/' class='item__link') Home
        li.list__item: a(href='/register' class='item__link') Register

  main
    form.form--login
      h1 Login
      
      .error-message
      
      .form__group
        label.group__label(for="email") Email:
        input.group__input(id="email" type="email" name="email")
      
      .form__group
        label.group__label(for="password") Password:
        input.group__input(id="password" type="password" name="password")
      
      button(type="submit" class="btn btn--blue") Login

  include extends/footer