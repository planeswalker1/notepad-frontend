extends extends/template

block main
  header
    nav.nav
      p.nav__title NotePad

      ul.nav__list
        li.list__item: a(href='/notes?token=' + token class='item__link') Notes
        li.list__item: a(href='/notes/create?token=' + token class='item__link') Create A Note
        li.list__item: a(class='button--logout item__link') Logout

  main
    form.form--deleteNote
      h1 Confirm Do you want to delete this note

      .note
        h1= note.name
        p= note.text

      button(type='submit') Delete Note
      button: a(href='/notes?token=' + token) Go Back

  include extends/footer